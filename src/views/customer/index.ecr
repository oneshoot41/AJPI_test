<div class="row">
  <div class="col-sm-11">
    <h2>Clients</h2>
  </div>
  <div class="col-sm-1">
    <a class="btn btn-success btn-sm" href="/customers/new">New</a>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    <tbody>
    <%- customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td>
          <span>
            <%= link_to("Show", "/customers/#{customer.id}", class: "btn btn-info btn-sm") -%>
            <%= link_to("Edit", "/customers/#{customer.id}/edit", class: "btn btn-success btn-sm") -%>
            <%= link_to("Delete", "/customers/#{customer.id}?_csrf=#{csrf_token}", "data-method": "delete", "data-confirm": "Are you sure?", class: "btn btn-danger btn-sm") -%>
          </span>
        </td>
      </tr>
    <%- end %>
    </tbody>
  </table>
</div>
